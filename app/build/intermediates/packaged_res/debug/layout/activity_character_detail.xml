<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                                          
                                                                                                    
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_character_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/image_character_detail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingBottom="@dimen/mid_large_margin"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/black" />

        <TextView
            android:id="@+id/text_name_character_detail"
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_character_detail"
            tools:text="Rick Sanchez" />

        <ImageView
            android:id="@+id/image_status_character_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/mid_large_margin"
            app:layout_constraintStart_toEndOf="@+id/text_name_character_detail"
            app:layout_constraintTop_toBottomOf="@id/image_character_detail" />

        <ImageView
            android:id="@+id/image_gender_character_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@+id/image_status_character_detail"
            app:layout_constraintTop_toBottomOf="@id/image_character_detail" />

        <TextView
            android:id="@+id/text_species_character_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_name_character_detail" />

        <TextView
            android:id="@+id/text_origin_character_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_species_character_detail" />

        <TextView
            android:id="@+id/text_location_character_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_origin_character_detail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         